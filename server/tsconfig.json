{
  "compilerOptions": {

    "target": "ES6",

    "module": "commonjs",
    
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },

  "include": [
    "*"
  ]
}